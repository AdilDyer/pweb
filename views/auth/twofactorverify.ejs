      <h4 style="text-align: center">
        Please Enter OTP For 2-Factor-Authentication
      </h4>
      <br />
      <h5 class="login-identity"><p>Student</p></h5>

      <form action="/auth/login-student" method="post">
        <input
          type="text"
          name="username"
          readonly
          style="display: none"
          value="<%=username%>"
        />
        <input
          type="text"
          name="password"
          readonly
          style="display: none"
          value="<%=password%>"
        />
        <br />
        <input
          type="text"
          readonly
          disabled
          style="text-align: center"
          value="<%=email%>"
        />
        <br />
        <input
          type="tel"
          name="otp"
          style="text-align: center"
          placeholder="Enter the OTP"
        />
        <br /><br />
        <button class="btn btn-lg btn-primary" type="submit">Verify</button>
      </form>

      <br /><br />
